{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "http": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string"
        },
        "rate_limit": {
          "type": "object",
          "properties": {
            "max": {
              "type": "number",
              "default": 100
            }
          }
        }
      },
      "required": [
        "address"
      ]
    },
    "control": {
      "type": "object",
      "description": "config for control server, which contains metrics and health handlers",
      "properties": {
        "address": {
          "type": "string"
        }
      },
      "required": [
        "address"
      ]
    },
    "log": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "info",
            "warning",
            "error",
            "debug"
          ]
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "client_secret": {
          "type": "string"
        }
      },
      "required": [
        "client_secret"
      ]
    },
    "channels": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/channel"
      }
    },
    "notify": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": [
            "immediately",
            "async",
            "null"
          ],
          "default": "immediately"
        },
        "on": {
          "type": "object",
          "properties": {
            "event_alert": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/trigger"
              }
            },
            "issue": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/trigger"
              }
            }
          }
        }
      },
      "required": [
        "on"
      ]
    }
  },
  "required": [
    "http",
    "channels",
    "notify"
  ],
  "definitions": {
    "channel": {
      "type": "object",
      "properties": {
        "telegram": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/telegram"
          }
        },
        "mattermost_api": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/mattermost-api"
          }
        },
        "mattermost_webhook": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/mattermost-webhook"
          }
        }
      }
    },
    "telegram": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "description": "Telegram API host",
          "default": "api.telegram.org"
        },
        "chat_id": {
          "type": "string",
          "description": "ID of chat"
        },
        "thread_id": {
          "type": "string",
          "description": "ID of chat thread"
        },
        "bot_token": {
          "type": "string",
          "description": "API Token"
        }
      },
      "required": [
        "chat_id",
        "bot_token"
      ]
    },
    "mattermost-api": {
      "type": "object",
      "required": [
        "token",
        "server",
        "channel"
      ],
      "properties": {
        "token": {
          "type": "string",
          "description": "bot token"
        },
        "server": {
          "type": "string",
          "description": "address to your mattermost server, example: http://localhost:8065"
        },
        "channel": {
          "oneOf": [
            {
              "type": "object",
              "required": ["id"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "id of mattermost channel"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["name", "team_id"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "name of mattermost channel"
                },
                "team_id": {
                  "type": "string",
                  "description": "id of mattermost team"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["name", "team_name"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "name of mattermost channel"
                },
                "team_name": {
                  "type": "string",
                  "description": "name of mattermost team"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "additionalProperties": false,
      }
    },
    "mattermost-webhook": {
      "type": "object",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string",
          "description": "URL to Mattermost incoming webhook"
        }
      },
      "additionalProperties": false
    },
    "trigger": {
      "type": "object",
      "properties": {
        "when": {
          "type": "object",
          "properties": {
            "project_name": {
              "$ref": "#/definitions/condition-string"
            }
          }
        },
        "message": {
          "type": "string",
          "description": "Template for message in Twig syntax"
        },
        "to": {
          "type": "string",
          "description": "Channel name from channels section"
        }
      },
      "required": [
        "message",
        "to"
      ]
    },
    "condition-string": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/condition-equals"
        },
        {
          "$ref": "#/definitions/condition-starts"
        },
        {
          "$ref": "#/definitions/condition-ends"
        }
      ]
    },
    "condition-equals": {
      "type": "object",
      "properties": {
        "equals": {
          "type": "string",
          "description": "string must be equals value"
        }
      }
    },
    "condition-starts": {
      "type": "object",
      "properties": {
        "starts": {
          "type": "string",
          "description": "string must be starts with value"
        }
      }
    },
    "condition-ends": {
      "type": "object",
      "properties": {
        "ends": {
          "type": "string",
          "description": "string must be ends with value"
        }
      }
    }
  }
}