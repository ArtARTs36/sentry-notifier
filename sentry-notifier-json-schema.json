{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "http": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string"
        }
      },
      "required": [
        "address"
      ]
    },
    "control": {
      "type": "object",
      "description": "config for control server, which contains metrics and health handlers",
      "properties": {
        "address": {
          "type": "string"
        }
      },
      "required": [
        "address"
      ]
    },
    "log": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "info",
            "warning",
            "error",
            "debug"
          ]
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "client_secret": {
          "type": "string"
        }
      },
      "required": [
        "client_secret"
      ]
    },
    "channels": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/channel"
      }
    },
    "notify": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": [
            "immediately",
            "async",
            "null"
          ],
          "default": "immediately"
        },
        "on": {
          "type": "object",
          "properties": {
            "event_alert": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/trigger"
              }
            },
            "issue": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/trigger"
              }
            }
          }
        }
      },
      "required": [
        "on"
      ]
    }
  },
  "required": [
    "http",
    "channels",
    "notify"
  ],
  "definitions": {
    "channel": {
      "type": "object",
      "properties": {
        "telegram": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/telegram"
          }
        },
        "mattermost": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/mattermost"
          }
        }
      }
    },
    "telegram": {
      "type": "object",
      "properties": {
        "chat_id": {
          "type": "string"
        },
        "thread_id": {
          "type": "string"
        },
        "bot_token": {
          "type": "string"
        }
      },
      "required": [
        "chat_id",
        "thread_id",
        "bot_token"
      ]
    },
    "mattermost": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "description": "bot token"
        },
        "server": {
          "type": "string",
          "description": "address to your mattermost server"
        },
        "channel": {
          "oneOf": [
            {
              "type": "object",
              "required": ["id"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "id of mattermost channel"
                }
              }
            },
            {
              "type": "object",
              "required": ["name", "team_id"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "name of mattermost channel"
                },
                "team_id": {
                  "type": "string",
                  "description": "id of mattermost team"
                }
              }
            },
            {
              "type": "object",
              "required": ["name", "team_name"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "name of mattermost channel"
                },
                "team_name": {
                  "type": "string",
                  "description": "name of mattermost team"
                }
              }
            }
          ]
        }
      },
      "required": [
        "token",
        "server"
      ]
    },
    "trigger": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "Template for message in Twig syntax"
        },
        "to": {
          "type": "string",
          "description": "Channel name from channels section"
        }
      },
      "required": [
        "message",
        "to"
      ]
    }
  }
}